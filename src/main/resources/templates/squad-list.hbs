{{#partial "title"}}
  List of squads
{{/partial}}
{{#partial "content"}}
  <section id="heroes-header">
    <div class="text-center">
      <h1 class="title text-green pt-5">List of squads</h1>
      <img src="/images/justice-league.png" class="img-sizing" alt="An image of the justice league squad">
    </div>
  </section>
  <section id="heroes-list" class="my-5">
    <div class="container">
      {{#if squads}}
        <table class="table table-striped table-responsive">
          <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Size</th>
            <th scope="col">Action</th>
          </tr>
          </thead>
          <tbody>
          {{#each squads}}
            <tr>
              <th class="fw-light text-white" scope="row">{{id}}</th>
              <td class="fw-light text-white">
                {{name}}
              </td>
              <td class="text-white">
                {{maxSize}}
              </td>
              <td>
                <a href="/squads/{{id}}" class="fw-light text-green">
                  View details
                </a>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      {{else}}
        <div class="alert alert-theme col-12 col-md-6 col-lg-4 mx-auto" role="alert">
          <i class="fa-solid fa-circle-info"></i>
          <span class="text-white px-2">No squads found</span>
        </div>
      {{/if}}
    </div>
  </section>
{{/partial}}
{{>layout.hbs}}