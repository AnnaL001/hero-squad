{{#partial "title"}}
  List of squads
{{/partial}}
{{#partial "content"}}
  <section id="squads-header">
    <div class="text-center">
      <h1 class="title text-green pt-5">List of squads</h1>
      <img src="/images/justice-league.png" class="img-sizing" alt="An image of the justice league squad">
    </div>
  </section>
  <section id="squad-action">
    <div class="text-center">
      <a href="/squads/new">
        <button class="btn btn-outline-primary mt-3 mx-auto">
          Add Squad
        </button>
      </a>
    </div>
  </section>
  <section id="squads-list" class="my-5">
    <div class="container">
      {{#if squads}}
        <table class="table table-striped table-responsive">
          <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Size</th>
            <th scope="col">Action</th>
          </tr>
          </thead>
          <tbody>
          {{#each squads}}
            <tr>
              <th class="fw-light text-white" scope="row">{{id}}</th>
              <td class="fw-light text-white">
                {{name}}
              </td>
              <td class="text-white">
                {{maxSize}}
              </td>
              <td>
                <a href="/squads/{{id}}" class="fw-light text-green">
                  View details
                </a>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      {{else}}
        {{#partial "alert"}}
          No squads found
        {{/partial}}
        {{>alert.hbs}}
      {{/if}}
    </div>
  </section>
{{/partial}}
{{>layout.hbs}}
