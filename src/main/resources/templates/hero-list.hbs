{{#partial "title"}}
  List of heroes
{{/partial}}
{{#partial "content"}}
  <section id="heroes-header">
    <div class="text-center">
      <h1 class="title text-green pt-5">List of heroes</h1>
      <img src="/images/justice-league.png" class="img-sizing" alt="An image of the justice league squad">
    </div>
  </section>
  <section id="hero-action">
    <div class="text-center">
      <a href="/heroes/new">
        <button class="btn btn-outline-primary mt-3 mx-auto">
          Add Hero
        </button>
      </a>
    </div>
  </section>
  <section id="heroes-list" class="my-5">
    <div class="container">
        {{#if heroes}}
          <table class="table table-striped table-responsive">
            <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Special power</th>
              <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
              {{#each heroes}}
                <tr>
                  <th class="fw-light text-white" scope="row">{{id}}</th>
                  <td class="fw-light text-white">{{name}}</td>
                  <td class="fw-light text-white">
                    {{specialPower}}
                  </td>
                  <td>
                    <a href="/heroes/{{id}}" class="fw-light text-green">
                      View details
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{else}}
          {{#partial "alert"}}
            No heroes found
          {{/partial}}
          {{>alert.hbs}}
        {{/if}}
    </div>
  </section>
{{/partial}}
{{>layout.hbs}}