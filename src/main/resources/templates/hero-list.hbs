{{#partial "title"}}
  List of heroes
{{/partial}}
{{#partial "content"}}
  <section id="heroes-header">
    <div class="text-center">
      <h1 class="title text-green pt-5">List of heroes</h1>
      <img src="/images/justice-league.png" class="img-sizing" alt="An image of the justice league squad">
    </div>
  </section>
  <section id="heroes-list" class="my-5">
    <div class="container">
        {{#if heroes}}
          <table class="table table-striped table-responsive">
            <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Name</th>
              <th scope="col">Special power</th>
              <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
              {{#each heroes}}
                <tr>
                  <th class="fw-light text-white" scope="row">{{id}}</th>
                  <td class="fw-light text-white">{{name}}</td>
                  <td class="fw-light text-white">
                    {{specialPower}}
                  </td>
                  <td>
                    <a href="/heroes/{{id}}" class="fw-light text-green">
                      View details
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        {{else}}
          <div class="alert alert-theme col-12 col-md-6 col-lg-4 mx-auto" role="alert">
            <i class="fa-solid fa-circle-info"></i>
            <span class="text-white px-2">No heroes found</span>
          </div>
        {{/if}}
    </div>
  </section>
{{/partial}}
{{>layout.hbs}}