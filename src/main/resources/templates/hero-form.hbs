{{#partial "title"}}
  Add a Hero
{{/partial}}
{{#partial "content"}}
  <section id="heroes-header">
    <div class="text-center">
      <h1 class="title text-green pt-5">Begin your journey ...</h1>
      <img src="/images/justice-league.png" class="img-sizing" alt="An image of the justice league squad">
    </div>
  </section>
  <section id="form">
    <div class="container">
      <div class="col-12 col-md-8 col-lg-6 mx-auto">
      {{#if edit}}
        <div class="card">
          <div class="card-body">
            <h2 class="text-center text-white">Edit hero data</h2>
            <hr class="text-white">
            <form action="/heroes/{{hero.id}}/update" class="my-4" method="post">
              <div class="form-floating my-4">
                <input type="text" class="form-control" id="hero-name" name="hero-name" placeholder="Name" value="{{hero.name}}">
                <label for="hero-name">Name</label>
              </div>
              <div class="form-floating my-4">
                <input type="number" class="form-control" id="hero-age" name="hero-age" placeholder="Age" value="{{hero.age}}">
                <label for="hero-age">Age</label>
              </div>
              <div class="form-floating my-4">
                <input type="text" class="form-control" id="hero-special-power" name="hero-special-power" placeholder="Special power" value="{{hero.specialPower}}">
                <label for="hero-special-power">Special power</label>
              </div>
              <div class="form-floating my-4">
                <input type="text" class="form-control" id="hero-weakness" name="hero-weakness" placeholder="Weakness" value="{{hero.weakness}}">
                <label for="hero-weakness">Weakness</label>
              </div>
              <div class="form-floating my-4">
                <select class="form-select" id="hero-gender" name="hero-gender" aria-label="Select gender">
                  <option value="M">Male</option>
                  <option value="F">Female</option>
                </select>
                <label for="hero-gender">Select gender</label>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-outline-primary">Edit</button>
              </div>
            </form>
          </div>
        </div>
      {{else}}
        <div class="card">
          <div class="card-body">
            <h2 class="text-center text-white">Add a hero</h2>
            <hr class="text-white">
            <form action="/heroes" class="my-4" method="post">
              <div class="form-floating my-4">
                <input type="text" class="form-control" id="hero-name" name="hero-name" placeholder="Name">
                <label for="hero-name">Name</label>
              </div>
              <div class="form-floating my-4">
                <input type="number" class="form-control" id="hero-age" name="hero-age" placeholder="Age">
                <label for="hero-age">Age</label>
              </div>
              <div class="form-floating my-4">
                <input type="text" class="form-control" id="hero-special-power" name="hero-special-power" placeholder="Special power">
                <label for="hero-special-power">Special power</label>
              </div>
              <div class="form-floating my-4">
                <input type="text" class="form-control" id="hero-weakness" name="hero-weakness" placeholder="Weakness">
                <label for="hero-weakness">Weakness</label>
              </div>
              <div class="form-floating my-4">
                <select class="form-select" id="hero-gender" name="hero-gender" aria-label="Select gender">
                  <option value="true">Male</option>
                  <option value="false">Female</option>
                </select>
                <label for="hero-gender">Select gender</label>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-outline-primary">Add</button>
              </div>
            </form>
          </div>
        </div>
      {{/if}}
      </div>
    </div>
  </section>
{{/partial}}
{{>layout.hbs}}