{{#partial "title"}}
  Squad profile
{{/partial}}
{{#partial "content"}}
  <section id="hero-profile">
    <div class="text-center">
      <h1 class="title text-green py-4">Squad profile</h1>
    </div>
    <div class="container">
      <div class="row gx-5">
        <div class="col-12 col-lg-5">
          <img src="/images/avengers-anime.jpg" class="rounded img-thumbnail mt-4"
               alt="An image of the Avengers anime characters">
        </div>
        <div class="col-12 col-lg-7">
          <p class="mt-4 text-white fw-light">
            <span class="text-green fw-regular">Name:</span>
            <span class="squad-badge px-2 py-1 text-white">
                {{squad.name}}
              </span>
          </p>
          <p class="mt-4 text-white fw-light">
            <span class="text-green fw-regular">Maximum size:</span>
            {{squad.maxSize}}
          </p>
          <p class="mt-4 text-white fw-light">
            <span class="text-green fw-regular">Cause:</span>
            {{squad.cause}}
          </p>
          <div class="d-flex profile-links">
            <a href="/squads/{{squad.id}}/update" class="fw-light py-2">
              <i class="fa-solid fa-pen-to-square text-green px-2"></i>
              Update
            </a>
            <a href="#" class="fw-light px-4 py-2">
              <i class="fa-solid fa-trash-can text-green px-2"></i>
              Delete
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <h2 class="text-center pt-5 pb-3 fs-medium">Members</h2>
  <section id="heroes-list">
    <div class="container">
      <table class="table table-striped table-responsive">
        <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Name</th>
          <th scope="col">Special power</th>
          <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each squad.heroes}}
          <tr>
            <th class="fw-light text-white" scope="row">{{id}}</th>
            <td class="fw-light text-white">{{name}}</td>
            <td class="fw-light text-white">
              {{specialPower}}
            </td>
            <td>
              <a href="/heroes/{{id}}" class="fw-light text-green">
                View details
              </a>
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
  </section>
{{/partial}}
{{>layout.hbs}}